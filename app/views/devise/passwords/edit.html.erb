<h2>Cambiar Clave</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nueva Clave" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "nueva clave" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirme Clave" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nueva clave" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar mi Clave" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
